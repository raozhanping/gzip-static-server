{
  "name": "gzip-static-server",
  "version": "1.0.1",
  "description": "A lightweight Gzip-enabled static file server for local development",
  "main": "dist/server.js",
  "bin": {
    "gzip-server": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "watch": "nodemon --exec ts-node src/cli.ts",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "static-server",
    "gzip",
    "compression",
    "local-server",
    "nodejs",
    "cli",
    "file-server",
    "web-server"
  ],
  "author": "raozhanping <raozhanping@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/raozhanping/gzip-static-server#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raozhanping/gzip-static-server.git"
  },
  "bugs": {
    "url": "https://github.com/raozhanping/gzip-static-server/issues"
  },
  "dependencies": {
    "@types/formidable": "^3.4.6",
    "@types/multer": "^2.0.0",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "formidable": "^3.5.4",
    "mime-types": "^2.1.35",
    "multer": "^2.0.2",
    "open": "^8.4.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^20.8.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
