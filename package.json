{
  "name": "gzip-static-server",
  "version": "1.0.0",
  "description": "A lightweight Gzip-enabled static file server for local development",
  "main": "dist/server.js",
  "bin": {
    "gzip-server": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "watch": "nodemon --exec ts-node src/cli.ts",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "static-server",
    "gzip",
    "compression",
    "development",
    "local-server"
  ],
  "author": "raozhanping <raozhanping@163.com>",
  "license": "MIT",
  "dependencies": {
    "mime-types": "^2.1.35",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "open": "^8.4.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/mime-types": "^2.1.1",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}